<h1>Editing Book</h1>
<%= form_with model:@book, url:book_path(@book.id), method: :patch do |f| %>

<h4>Title</h4
<p><%= f.text_field :title %></p>

<h4>Body</h4>
<p><%= f.text_area :body %></p>

<%= f.submit 'Update Book' %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", book_index_path %>

<% end %>